<head>
    <title>Login</title>
    <link rel="stylesheet" href="/views/Css/login.css">
</head>
<div id="container">
    <div id="nav_shadow"></div>
    <div id="nav_bar">
        <div id="right">
            <img src="https://res.cloudinary.com/dtg5jkrv7/image/upload/v1622303085/logo.svg"
                id="logo"></object>
            <span id="company_name">TheSpiceNet
            </span>
        </div>
        <div id="left">
            <a href="/" class="nav_link">
                <button type="submit">Home
                </button>
            </a>
        </div>
    </div>

<div class="alert alert-danger" id="alert" role="alert">
</div>

    <div id="img"></div>
    <div id="side_bar">
        <h3 id="form_heading">User Login</h3>
        <form method="POST" action="/" enctype="multipart/form-data" id="login_form">
            <div class="mb-3 mt-0 m-5">
                <label for="emailId" class="form-label">Email address</label>
                <input type="email" name="email" class="form-control" placeholder="Enter Your Username" id="emailId"
                    required>
            </div>
            <div class="mb-3 mt-0 m-5">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Enter Your Password"
                    id="password" required>
            </div>
            <div id="link">
                <button type="submit" id="button"><span>Login</span></button><br>
                <a href="/signup">Don't have an account yet? Sign Up</a>
            </div>
        </form>
    </div>
</div>
<script differ> 
    if ("{{password}}"=="Incorrect"){
         showMessage('alert',"Incorrect Email or Password");
    }
     function showMessage(elementId,message) {
        document.getElementById(elementId).style.display = 'block';
        console.log(elementId)
        document.getElementById("alert").innerHTML =`<b>Warning!</b> ${message}`
        setTimeout(`hide("${elementId}")`, 2000);
    }

    function hide(elementId) {
        document.getElementById(elementId).style.display = 'none';
    }
</script>